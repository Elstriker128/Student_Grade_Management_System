@{
    ViewData["Title"] = "Kvalifikacijos pridėjimas";
}

@if (Context.Session.GetString("UserType") == "Admin")
{
    <h2>Pridėti kvalifikaciją mokytojui</h2>

    <form asp-action="AddQualification" method="post">
        <div class="form-group">
            <label for="teacherUsername">Mokytojo vartotojo vardas</label>
            <input type="text" class="form-control" id="teacherUsername" name="teacherUsername" value="@ViewBag.TeacherUsername" readonly />
        </div>
        <div class="form-group">
            <label for="subjectId">Dalykas</label>
            <select class="form-control" id="subjectId" name="subjectId">
                <option value="">Pasirinkite dalyką</option>
                @foreach (var subject in ViewBag.Subjects)
                {
                    <option value="@subject.Value">@subject.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Pridėti kvalifikaciją</button>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">Jūs neturite teisės matyti šio puslapio.</div>
}

