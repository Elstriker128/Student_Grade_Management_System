@{
    ViewData["Title"] = "Add";
}

@if (Context.Session.GetString("UserType") == "Admin")
{
<h2>Naujų klasių pridėjimo langas</h2>
<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="ClassNumber">Klasės skaičius</label>
        <input type="number" class="form-control" id="ClassNumber" name="classNumber" min="1" max="12" required />
    </div>
    <div class="form-group">
        <label for="StudentCount">Maksimalus mokinių skaičius</label>
        <input type="number" class="form-control" id="StudentCount" name="studentCount" min="5" max="30" required />
    </div>
    <!-- dropdown list of teachers-->
    <div class="form-group">
        <label for="Teacher_Username">Atsakingas mokytojas</label>
        <select class="form-control" id="Teacher_Username" name="Teacher_Username">
            <option value="">Pasirinkite mokytoją</option>
            @foreach (var teacher in ViewBag.Teachers)
            {
                <option value="@teacher.Username">@teacher.Username</option>
            }
            <option value="">Nepriskirti mokytojo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Pridėti klasę</button>
</form>
}
else
{
    <div class="alert alert-danger" role="alert">
        Jūs neturite teisės matyti šio puslapio.
    </div>
}