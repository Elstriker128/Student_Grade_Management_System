@model Student_Grade_Management_System.Models.Student
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Edit Student";
}

<div class="container mt-4">
	<h2 class="mb-4">Mokinio Redagavimas</h2>

	@using (Html.BeginForm("Change", "Students", FormMethod.Post))
	{
		@* @Html.HiddenFor(m => m.Username) *@ <!-- Hidden field for Student ID -->

		<div class="mb-3">
			@Html.LabelFor(m => m.Username, "Vartotojo vardas", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Username, new { @class = "form-control", @required = "required", @readonly = "readonly" })
			@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Password, "Slaptažodis (norint pakeisti prašau įvesti pilnai iš naujo)", new { @class = "form-label" })
			@Html.PasswordFor(m => m.Password, new { @class = "form-control", @value = "defaultPassword" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Name, "Vardas", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Surname, "Pavardė", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @required = "required" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Birth_Date, "Gimimo data", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Birth_Date, new {@class = "form-control"})
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.SSN, "Asmens kodas", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.SSN, new { @class = "form-control", @type = "number" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.City, "Miestas", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.City, new { @class = "form-control" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Street, "Gatvė", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Building, "Pastato numeris", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Building, new { @class = "form-control" })
		</div>
		<div class="mb-3">
			@Html.LabelFor(m => m.Apartment, "Butas", new { @class = "form-label" })
			@Html.TextBoxFor(m => m.Apartment, new { @class = "form-control" })
		</div>

		<!-- Dropdown for School_ID -->
		<div class="mb-3">
			<label class="form-label" for="combinedSchool">Mokykla</label>
			<select name="combinedSchool" id="combinedSchool" class="form-control">
				<option value="@ViewBag.CurrentSchool.Combined">@ViewBag.CurrentSchool.Combined</option>
				@foreach (var classItem in ViewBag.Schools)
				{
					<option value="@classItem.CombinedOne">@classItem.CombinedOne</option>
				}
			</select>
		</div>

		<button type="submit" class="btn btn-primary">Atnaujinti</button>
	}
</div>
